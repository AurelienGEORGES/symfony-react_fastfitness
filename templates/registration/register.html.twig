{% extends 'template.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block content %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h1 class="titleBlog my-5">D'abord une petite étape d'inscription</h1>

	<section class="container media-largeur-accueil">
		<div class="justify-content-center my-1 mx-3 text-white">
			{{ form_start(registrationForm) }}


			{{ form_row(registrationForm.username, {
            label: 'Pseudo * : '
        }) }}

			{{ form_row(registrationForm.email, {
            label: 'Email * : '
        }) }}

			{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe * : '
        }) }}

			{{ form_row(registrationForm.agreeTerms, {
            label: 'Accord avec la politique de confidentialité * : '
        }) }}
			<div class="d-flex justify-content-center my-4">
				<button type="submit" class="btn btn-success bouton-accueil">Valider l'inscription</button>
			</div>
			{{ form_end(registrationForm) }}

		</div>

		<div>
			<img src="{{ asset('assets/images/img2.webp') }}" alt="image de fast fitness" class="d-block w-100">
		</div>

	</section>

{% endblock %}
