                <td>{{ reservation_coach.title }}</td>
                <td>
                    <a href="{{ path('app_reservation_coach_show', {'id': reservation_coach.id}) }}">show</a>
                    <a href="{{ path('app_reservation_coach_edit', {'id': reservation_coach.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_coach_new') }}">Create new</a>
