<form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Voulez vraiment supprimer cet article?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">    
    <button class="btn btn-success bouton-accueil">Supprimer</button>    
</form>
