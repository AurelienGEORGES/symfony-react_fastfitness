{% extends 'template.html.twig' %}

{% block title %}Register
{% endblock %}

{% block content %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h1 class="titleAccueil my-5">D'abord une petite étape d'inscription</h1>

	<section class="container col-lg">

		{{ form_start(registrationForm) }}
		<div class="flex justify-content-center my-1 mx-3 fs-3 text-white">

			{{ form_row(registrationForm.username, {
            label: 'Pseudo * : '
        }) }}

			{{ form_row(registrationForm.email, {
            label: 'Email * : '
        }) }}

			{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe * : '
        }) }}
        
			{{ form_row(registrationForm.agreeTerms, {
            label: 'Accord avec la politique de confidentialité * : '
        }) }}           
 <div class="d-flex justify-content-center my-4">
			<button type="submit" class="btn btn-success mb-2 px-5 py-3 fs-3">Valider</button>
</div>
			{{ form_end(registrationForm) }}

		</div>

	</section>

{% endblock %}
