{% extends 'base.html.twig' %}

{% block title %}ReservationCoach index{% endblock %}

{% block body %}
    <h1>ReservationCoach index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation_coach in reservation_coaches %}
            <tr>
                <td>{{ reservation_coach.id }}</td>
