{% extends 'template.html.twig' %}

{% block title %}Post
{% endblock %}

{% block content %}
	<h1>Post</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ post.id }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ post.content }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ post.title }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ post.image }}</td>
			</tr>
		</tbody>
	</table>


	<h1>Comments</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>CreatedAt</th>
				<th>Content</th>
			</tr>
		</thead>
		<tbody> 
			{% for comment in comments %}
				<tr>
					<td>test{{ comment.id }}</td>
					<td>test{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>test{{ comment.content }}</td>
                </tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

    <a href="{{ path('app_comment_new') }}">Poser un nouveau commentaire</a>

	<a href="{{ path('app_post_index') }}">back to list</a>

	<a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>

	{{ include('post/_delete_form.html.twig') }}
{% endblock %}
